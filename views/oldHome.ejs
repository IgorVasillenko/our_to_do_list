<!doctype html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>My to do list</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    </head>
    <body class="container" style="margin-top: 50px;">
        <div class="card"> 
            <div class="card-header">
                <ul class="nav nav-pills w-100">
                    <li class="nav-pill active">
                        <a class="nav-link">To do list</a>
                    </li>
                    <li class="nav-pill ml-auto">
                        <a class="nav-link active" href="/add">Add Task</a>
                    </li>
                </ul>
            </div>
        <div class="card-body">
            
            <% if(data.length) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Task</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i< data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= data[i].task%></td>
                            <td><%= data[i].description%></td>
                            <td>
                                <a class="btn btn-success edit" href="/update/<%=data[i].id%>">Edit</a>                       
                                <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../delete/<%=data[i].id%>">Delete</a>                       
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
                <% } %>
                
                <% if(!data.length) { %>
                    <p class="text-center">No tasks found!</p>
                <% } %>
        
                </div>
            </div>
        
        </body>
        </html>
        